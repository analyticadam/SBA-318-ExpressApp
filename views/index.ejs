<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRUPNfO9kV+2cxrN2D7K9hG8GA5r3ERLPB8N1LlA"
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="/css/styles.css" />
		<title>Task Manager</title>
	</head>
	<body>
		<div class="container mt-4">
			<!-- Page Title -->
			<h1 class="text-primary text-center mb-4">Task Manager</h1>

			<!-- Add Task Button -->
			<div class="text-center mb-4">
				<a href="/tasks/add" class="btn btn-primary btn-lg add-task-btn"
					>Add Task</a
				>
			</div>

			<!-- Task List -->
			<ul class="list-group">
				<% tasks.forEach((task) => { %>
				<li
					class="list-group-item d-flex justify-content-between align-items-center"
				>
					<div>
						<strong><%= task.title %></strong> - <%= task.status %> <% if
						(task.category) { %> (<%= categories.find((cat) => cat.id ===
						task.category)?.name || "Uncategorized" %>) <% } else { %>
						(Uncategorized) <% } %>
					</div>
					<div>
						<a href="/tasks/<%= task.id %>/edit" class="btn btn-warning btn-sm"
							>Edit</a
						>
						<form
							action="/tasks/<%= task.id %>?_method=DELETE"
							method="POST"
							class="d-inline"
						>
							<button
								type="submit"
								class="btn btn-danger btn-sm"
								onclick="return confirm('Are you sure you want to delete this task?');"
							>
								Delete
							</button>
						</form>
					</div>
				</li>
				<% }) %>
			</ul>
		</div>
	</body>
</html>
